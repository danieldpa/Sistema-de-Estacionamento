@model VeiculoModel
@{
    ViewData["Title"] = "Cadastrar Entrada";
}

<div class="text-center">
    <h1 class="display-4">Entrada de Veículo</h1>
</div>

<form asp-controller="Veiculo" asp-action="Criar" method="post">

    <div class="form-group mb-4">
        <label for="placa">Placa do Veículo</label>
        <input type="text" asp-for="Placa" class="form-control" id="placa" placeholder="Digite a placa" required pattern="^.{7}$" title="A placa deve ter 7 caracteres">
    </div>

    <div class="form-group mb-4">
        <label for="proprietario">Proprietário</label>
        <input type="text" asp-for="Proprietario" class="form-control" id="proprietario" placeholder="Digite o nome" required>
    </div>

    <div class="mb-4">
        <button type="submit" class="btn btn-primary">Registrar</button>
        <a class="btn btn-secondary" asp-controller="Veiculo" asp-action="Estacionados">Voltar</a>
    </div>
</form>


